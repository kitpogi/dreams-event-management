"use strict";

var _react = require("@testing-library/react");
var _Card = require("../Card");
var _testHelpers = require("../../../test-utils/testHelpers");
var _jsxRuntime = require("react/jsx-runtime");
describe('Card Dark Mode', () => {
  it('renders correctly in light mode', () => {
    const {
      container
    } = (0, _testHelpers.renderLightMode)(/*#__PURE__*/(0, _jsxRuntime.jsx)(_Card.Card, {
      children: "Light Card"
    }));
    expect(_react.screen.getByText('Light Card')).toBeInTheDocument();
    const card = container.firstChild;
    expect(card).toHaveClass('bg-card', 'text-card-foreground');
  });
  it('renders correctly in dark mode', () => {
    const {
      container
    } = (0, _testHelpers.renderDarkMode)(/*#__PURE__*/(0, _jsxRuntime.jsx)(_Card.Card, {
      children: "Dark Card"
    }));
    expect(_react.screen.getByText('Dark Card')).toBeInTheDocument();
    const card = container.firstChild;
    expect(card).toHaveClass('bg-card', 'text-card-foreground');
  });
  it('maintains contrast in both modes', () => {
    const lightMode = (0, _testHelpers.renderLightMode)(/*#__PURE__*/(0, _jsxRuntime.jsx)(_Card.Card, {
      children: "Test"
    }));
    const darkMode = (0, _testHelpers.renderDarkMode)(/*#__PURE__*/(0, _jsxRuntime.jsx)(_Card.Card, {
      children: "Test"
    }));
    const lightCard = lightMode.container.firstChild;
    const darkCard = darkMode.container.firstChild;

    // Both should have background and text colors
    expect(lightCard).toHaveClass('bg-card', 'text-card-foreground');
    expect(darkCard).toHaveClass('bg-card', 'text-card-foreground');
  });
  it('applies border colors correctly in both modes', () => {
    const lightMode = (0, _testHelpers.renderLightMode)(/*#__PURE__*/(0, _jsxRuntime.jsx)(_Card.Card, {
      variant: "outlined",
      children: "Test"
    }));
    const darkMode = (0, _testHelpers.renderDarkMode)(/*#__PURE__*/(0, _jsxRuntime.jsx)(_Card.Card, {
      variant: "outlined",
      children: "Test"
    }));
    const lightCard = lightMode.container.firstChild;
    const darkCard = darkMode.container.firstChild;
    expect(lightCard).toHaveClass('border-2', 'border-border');
    expect(darkCard).toHaveClass('border-2', 'border-border');
  });
});
